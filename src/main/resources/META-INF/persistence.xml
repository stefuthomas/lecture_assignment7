<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="aikidoPU">
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mariadb://localhost:3306/week7_inclass"/>
            <property name="jakarta.persistence.jdbc.user" value="dbuser"/>
            <property name="jakarta.persistence.jdbc.password" value="dbpass"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.mariadb.jdbc.Driver"/>
